<div class="container">
  <div class="chart-project">
    <canvas id="myChartindex"></canvas>
  </div>
</div>
 <%= render 'shared/timeline' %>

 <!-- LE GRAPH DU PROJETS -->

<%= content_for(:after_js) do %>
  <script>
    $(document).ready(function() {
      new Chart($("#myChartindex"), {
          type: 'bar',
          data: {
              labels: <%= raw @array_date.to_json %>,
              datasets: [{
                  label: 'Unique Visitors',
                  data: <%= raw @array_clean.to_json %>,
                  backgroundColor: [
                      'rgba(255, 99, 132, 0.2)',
                      'rgba(54, 162, 235, 0.2)',
                      'rgba(255, 206, 86, 0.2)',
                      'rgba(75, 192, 192, 0.2)',
                      'rgba(153, 102, 255, 0.2)',
                      'rgba(255, 159, 64, 0.2)'
                  ],
                  borderColor: [
                      'rgba(255,99,132,1)',
                      'rgba(54, 162, 235, 1)',
                      'rgba(255, 206, 86, 1)',
                      'rgba(75, 192, 192, 1)',
                      'rgba(153, 102, 255, 1)',
                      'rgba(255, 159, 64, 1)'
                  ],
                  borderWidth: 1
              }]
          },
          options: {
              scales: {
                  yAxes: [{
                      ticks: {
                          beginAtZero:true
                      }
                  }]
              }
          }
      });
    });
  </script>
<% end %>






