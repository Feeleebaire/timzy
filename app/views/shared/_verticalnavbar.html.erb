<div id="sidebar">

  <div id="sidebar-top">
      <%= link_to root_path do %>
         <%= image_tag "logo_svg.svg", id: "size-logo" %>
      <% end %>

      <%= link_to teams_path do %>
         <%= image_tag "members.svg", class: "hover-icon space-between-imgs", id: "members" %>
      <% end %>

      <%= link_to activity_path do %>
         <%= image_tag "Connections.svg", class: " hover-icon space-between-imgs" %>
      <% end %>
  </div>

  <div id="sidebar-bottom">

    <!--   Add avatar link here-->

    <% if user_signed_in? %>
      <%= link_to edit_user_registration_path do %>
        <div> <%= cl_image_tag current_user.photo, crop: :fill, class: "avatar-square" %> </div>
      <% end %>
      <%= link_to destroy_user_session_path, method: :delete do %>
        <div class= "space-between-imgs"> <%= image_tag "logout.svg" %> </div>
      <% end %>
    <% end %>
  </div>

</div>




