<%= link_to project_path(a.trackable.project.id, :anchor => 'comments') do  %>
  <div class="feed-card">
    <div class="feed-image">
      <div class="feed-avatar"> <%= cl_image_tag activity.trackable.user.photo, height: 50, width: 50, crop: :fill, class: "avatar-rounded" %></div>
    </div>
    <div class="feed-content">
      <div class="feed-context"> <i class="fa fa-calendar"> </i> <%= a.created_at.strftime('%-d %B %Y %H:%M:%S') %> <strong>@ <%= activity.trackable.project.team.name %></strong> : </div>
      <div class="feed-details"><%= activity.trackable.user.first_name %> reacted to <%= activity.trackable.project.title%> : "<%= activity.trackable.content%>" </div>
    </div>
<% end %>
<hr>


