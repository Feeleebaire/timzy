          <%end%>
        <% end %>
        </div>
      <br>
        <div class="col-xs-12 col-md-7 col-lg-6">
          <div class="clock">
            <div class="hour"></div>
            <div class="second"></div>
            <div class="center"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

